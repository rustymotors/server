{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "outDir": "dist",
        "plugins": [
            {
              "name": "typescript-eslint-language-service"
            }
          ]
    },
    "files": [
        "./app.ts"
    ]
}
