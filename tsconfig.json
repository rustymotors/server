{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2019"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "./dist",
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  }
}