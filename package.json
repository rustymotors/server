{
  "name": "mcos",
  "version": "3.2.0-beta1",
  "description": "a server",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "AUTHORS"
  ],
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix && npx prettier -w app.ts services src",
    "check:license": "npm licenses audit --summary --config=licenses.config.js",
    "start": "node bin/app.js | ./node_modules/.bin/pino-pretty",
    "dev": "node bin/app.js | ./node_modules/.bin/pino-pretty",
    "build": "tsc --build --verbose",
    "watch": "tsc --noEmit --watch src/bin/app.ts",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "test": "node --experimental-vm-modules --no-warnings -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles --force-exit --config jest.config.json"
  },
  "author": "Drazi Crendraven <drazisil@hey.com>",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:drazisil/mcos.git"
  },
  "dependencies": {
    "@types/pg": "8.6.5",
    "mcos-core": "*",
    "mcos-shared": "*",
    "pg": "8.7.3",
    "pino": "next",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@tsconfig/node16": "1.0.2",
    "@types/chai": "4.3.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "babel-jest": "27.5.1",
    "chai": "4.3.6",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "mocha": "9.2.2",
    "pino-pretty": "7.6.1",
    "prettier": "2.6.2",
    "prettier-eslint": "14.0.0",
    "source-map-support": "0.5.21",
    "ts-jest": "27.1.4"
  },
  "nyc": {
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "useSpawnWrap": true
  },
  "volta": {
    "node": "16.14.2",
    "npm": "8.7.0"
  },
  "workspaces": [
    "packages/mcos-shared",
    "packages/mcos-core",
    "packages/mcos-patch",
    "packages/mcos-shard",
    "packages/mcos-auth",
    "packages/mcos-admin",
    "packages/mcos-database",
    "packages/mcos-transactions",
    "packages/mcos-persona",
    "packages/mcos-login",
    "packages/mcos-lobby"
  ]
}
